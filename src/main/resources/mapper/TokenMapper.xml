<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.TokenMapper">

<!--    查询规则-->
    <resultMap id="TokenEntityMap" type="com.example.demo.bean.Token">
        <result property="token" column="token"></result>
        <result property="username" column="username"></result>
        <result property="longs" column="longs"></result>
        <result property="ordertime" column="ordertime"></result>
        <result property="uid" column="uid"></result>
    </resultMap>

    <select id="selectbytoken" resultMap="TokenEntityMap">
        select * from token where token=#{token}
    </select>

    <insert id="insert">
        insert into token(token,ordertime,longs,username,uid)values (#{token},#{ordertime},#{longs},#{username},#{uid})
    </insert>

    <delete id="deletebytoken">
        delete from token where token=#{token}
    </delete>
</mapper>
